---
// src/components/Button.astro
interface Props {
  href: string;
  variant?: 'primary' | 'secondary';
}

const { href, variant = 'primary' } = Astro.props;

const variants = {
  primary: 'bg-[--color-brand-primary] text-white hover:opacity-90',
  secondary: 'bg-white/10 border border-white/10 text-[--color-text-default] hover:bg-white/20',
};
---
<a
  href={href}
  class:list={[
    "inline-flex items-center justify-center gap-2 rounded-full px-6 py-3 font-semibold transition-all duration-200",
    variants[variant]
  ]}
>
  <slot />
</a>